@model GraciousGrocery.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}
<body style="background-color: lightgoldenrodyellow!important">
<h2 style="margin-top: 120px !important;color: #c72c48 !important">Add role to user</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.roles), new { @class = "form-control" })
    </div>
    <button type="submit">Add</button>
}
</body>