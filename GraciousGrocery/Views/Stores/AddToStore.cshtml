@model GraciousGrocery.Models.AddToStoreModel
@{
    ViewBag.Title = "AddToStore";
}

<h2>Add product to @ViewBag.StoreName</h2>

@using (Html.BeginForm("AddToStore", "Stores"))
{
    <div class="form-group">
        @Html.DropDownListFor(m => m.productId, new SelectList(Model.products, "productId", "StoreName"), new { @class="form-control"})
    </div>
    @Html.HiddenFor(m => m.storeId) 
    <button type="submit" class="btn btn-default">Add</button>
}